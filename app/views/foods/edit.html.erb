<%= link_to '食事登録画面', new_meal_path, class: 'btn btn-success' %>
<%# --- 登録表示 ----------------------------------------------------- %>
<% @foods.each do |food| %>
  <div>
    <td class='text-center'><%= food.food_name %></td>
    <td class='text-center'><%= food.kcal %></td>
    <%= link_to '編集する', edit_food_path(id: food), class: 'btn-default btn-outline-success' %>
    <%= link_to '削除する', meal_path(id: food), method: :delete, data: { confirm: '削除しますか？' }, class: 'btn-default btn-outline-danger' %>
  </div>
<% end %>

