<%# --- 題名 -------------------------------------------------------- %>
<div><h1>編集する</h1></div>
<%# --- 食品登録フォーム -------------------------------------------------------- %>
<div class='flerm'>
  <div class='left'>
    <%# --- 食品入力フォーム -------------------------------------------------------- %>
    <%= form_with(url: food_path, model: @food, local: true, method: :patch) do |f| %>
      <%= render "form", f: f %>
    <% end %>
  </div>
  <div class='right'>
    <%# --- 編集表示 ----------------------------------------------------- %>
    <h1>編集中データ</h1>
    <td class='text-center'><%= @food.menu %></td>
    <td class='text-center'><%= @food.explain %></td>
    <td class='text-center'><%= @food.kcal %></td>
    <td class='text-center'><%= @food.protein %></td>
    <td class='text-center'><%= @food.lipid %></td>
    <td class='text-center'><%= @food.carb %></td>
    <td class='text-center'><%= @food.calcium %></td>
    <td class='text-center'><%= @food.vitamin_a %></td>
    <td class='text-center'><%= @food.vitamin_b1 %></td>
    <td class='text-center'><%= @food.vitamin_b2 %></td>
    <td class='text-center'><%= @food.vitamin_c %></td>
    <td class='text-center'><%= @food.vitamin_e %></td>
    <td class='text-center'><%= @food.fiber %></td>
    <td class='text-center'><%= @food.salt %></td>
    <%# --- 登録画面 -------------------------------------------------------- %>
    <div><%= link_to "登録画面に戻る", new_food_path, class: "btn btn-success" %></div>
  </div>
</div>
<%= render "shared/footer"%>