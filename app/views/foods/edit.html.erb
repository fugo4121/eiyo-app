<%# --- フォーム入力 --------------------------------------------------- %>
<%= form_with(model: @food, local: true) do |f| %>
  <div class='form-wrap'>
    <%# --- タイトル ------------------------------------------------------ %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <h1>編集する</h1>
      </div>
    </div>
    <%# --- エラー表示 ---------------------------------------------------- %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <%= render 'shared/error_messages', model: f.object %>
      </div>
    </div>
    <%# --- 食品名 ---------------------------------------------------------- %>
    <div class="form-group">
      <div class='form-text-wrap'>
          <label class="form-text">食品名</label>
          <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :food_name, class:"input-default", placeholder: "ご飯" %>
    </div>
    <%# --- 説明 ---------------------------------------------------------- %>
    <div class="form-group">
      <div class='form-text-wrap'>
          <label class="form-text">説明</label>
          <span class="indispensable">任意</span>
      </div>
      <%= f.text_field :explain, class:"input-default", placeholder: "ご飯" %>
    </div>
    <%# --- カロリー --------------------------------------------------------- %>
