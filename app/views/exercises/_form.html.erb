<%# --- エラー表示 ---------------------------------------------------- %>
<div class="form-group">
  <div class='form-text-wrap'>
    <%= render 'shared/error_messages', model: f.object %>
  </div>
</div>
<%# --- 商品登録 -------------------------------------------------------- %>
<%= link_to "トレーニングメニュー登録", new_training_menu_path, class: "btn btn-success" %>
<%# --- 食事一覧 -------------------------------------------------------- %>
<tbody>
  <%# 0件の時、データがありませんと表示 %>
  <% if @training_menus.exists? %>
    <%# training_menu_countにより、1レコード目にチェックをする %>
    <% training_menu_count = 0 %>
    <% @training_menus.each do |training_menu| %>
      <div>
        <% training_menu_count += 1 %>
        <% if training_menu_count == 1 then %>
          <label class="button-name"> <%= f.radio_button :training_menu_id, training_menu.id, checked: true, class: "button-size" %><%= training_menu.menu %></label>
        <% else %> 
          <label class="button-name"> <%= f.radio_button :training_menu_id, training_menu.id, class: "button-size" %><%= training_menu.menu %></label>
        <% end %>
        <td class='text-center'><%= training_menu.explain %></td>
        <td class='text-center'><%= training_menu.kcal %></td>
      </div>
    <% end %>
  <% else %>
    <td class='text-center'>データがありません</td>
  <% end %>
</tbody>

<%# 0件の時、表示させない %>
<% if @training_menus.exists? %>
<%# --- セット数 -------------------------------------------------------- %>
<%= f.text_field :set, class:"input-default", placeholder: "60", id:'weight' %>
<%# --- 記録日 -------------------------------------------------------- %>
<div class="form-group">
  <div class='form-text-wrap'>
    <label class="form-text">記録日</label>
    <span class="indispensable">必須</span>
  </div>
  <div class='input-birth-wrap'>
    <% if request.path_info == new_exercise_path %>
      <%= raw sprintf(
          f.date_select(
            :start_time,
            class:'select-birth',
            id:"recording-date",
            use_month_numbers: true,
            prompt:'--',
            start_year: (Time.now.year - 1),
            end_year: (Time.now.year),
            selected: Date.today,
            date_separator: '%s'),
          "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    <% else %>
      <%= raw sprintf(
          f.date_select(
            :start_time,
            class:'select-birth',
            id:"recording-date",
            use_month_numbers: true,
            prompt:'--',
            start_year: (Time.now.year - 1),
            end_year: (Time.now.year),
            date_separator: '%s'),
          "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    <% end %>
  </div>
</div>
<%# --- 送信ボタン ----------------------------------------------------- %>
<div class='register-btn'>
  <%# 新規登録か編集かにより、ボタン名称変更 %>
  <% if request.path_info == new_exercise_path %>
    <%= f.submit "記録する" ,class:"register-red-btn" %>
  <% else %>
    <%= f.submit "編集する" ,class:"register-red-btn" %>
  <% end %>
</div>
<% end %>




