<%# --- 題名 -------------------------------------------------------- %>
<div><h1>編集する</h1></div>
<%# --- 食品登録フォーム -------------------------------------------------------- %>
<div class='flerm'>
  <div class='left'>
    <%# --- トレーニングフォーム -------------------------------------------------------- %>
    <%= form_with(url: edit_exercise_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword3, placeholder: "検索する", class: "input-box" %>
      <%= form.submit "検索",class:"search-button" %>
    <% end %>
    <%= form_with(url: exercise_path, model: @exercise, local: true, method: :patch) do |f| %>
      <%= render "form", f: f %>
    <% end %>
  </div>

  <div class='right'>
    <%# --- 編集表示 ----------------------------------------------------- %>
    <h1>編集中データ</h1>
    <td class='text-center'><%= @exercise.start_time.strftime("%Y年%m月%d日") %>
    <td class='text-center'><%= @exercise.training_menu.menu %></td>
    <td class='text-center'><%= @exercise.training_menu.explain %></td>
    <td class='text-center'><%= @exercise.set %></td>
    <%# --- 登録画面 -------------------------------------------------------- %>
    <div><%= link_to "登録画面に戻る", new_exercise_path, class: "btn btn-success" %></div>
  </div>
</div>
<%= render "shared/footer"%>