<%# --- エラー表示 ---------------------------------------------------- %>
<div class="form-group">
  <div class='form-text-wrap'>
    <%= render 'shared/error_messages', model: f.object %>
  </div>
</div>
<%# --- 食品名 ---------------------------------------------------------- %>
<div class="form-group">
  <div class='form-text-wrap'>
      <label class="form-text">トレーニング名</label>
      <span class="indispensable">必須</span>
  </div>
  <%= f.text_field :menu, class:"input-default", placeholder: "ランニング" %>
</div>
<%# --- 説明 ---------------------------------------------------------- %>
<div class="form-group">
  <div class='form-text-wrap'>
      <label class="form-text">説明</label>
      <span class="indispensable">任意</span>
  </div>
  <%= f.text_field :explain, class:"input-default", placeholder: "ランニング1km分" %>
</div>
<%# --- カロリー --------------------------------------------------------- %>
<div class="form-group">
  <div class='form-text-wrap'>
      <label class="form-text">カロリー</label>
      <span class="indispensable">必須</span>
  </div>
  <div class='input-name-wrap'>
    <%= f.text_field :kcal, class:"input-default", placeholder: "60", id:'weight' %>
    <div class='form-text-wrap'>
      <label class="form-text">kcal</label>
    </div>
  </div>
</div>

<%# --- 送信ボタン ----------------------------------------------------- %>
<div class='register-btn'>
  <%# 新規登録か編集かにより、ボタン名称変更 %>
  <% if request.path_info == new_training_path %>
    <%= f.submit "登録する" ,class:"register-red-btn" %>
  <% else %>
    <%= f.submit "編集する" ,class:"register-red-btn" %>
  <% end %>
</div>


