<% if user_signed_in? %>
  <footer>
    <ul class="flex-list">

      <li class="flex_item">
        <%= link_to root_path do %>
          <%= icon("fas", "home", class: "home-icon") %>
          <h4>ホーム</h4>
        <% end %>
      </li>

      <li class="flex_item">
        <%= link_to new_health_path do %>
          <%= icon("fas", "clock", class: "clock-icon") %>
          <h4>体調管理</h4>
        <% end %>
      </li>

      <li class="flex_item">
        <%= link_to new_meal_path do %>
          <%= icon("fas", "clock", class: "clock-icon") %>
          <h4>食事管理</h4>
        <% end %>
      </li>

      <li class="flex_item">
        <%= link_to new_exercise_path do %>
          <%= icon("fas", "clock", class: "clock-icon") %>
          <h4>運動管理</h4>
        <% end %>
      </li>

      <li class="flex_item">
        <%= link_to edit_user_path(current_user.id) do %>
          <%= icon("fas", "user", class: "user-icon") %>
          <h4>マイページ</h4>
        <% end %>
      </li>

      <li class="flex_item">
        <%= link_to destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} do %>
          <%= icon("fas", "sign-out-alt", class: "logout-icon") %>
          <h4>ログアウト</h4>
        <% end %>
      </li>
      
    </ul>
  </footer>
<% end %>