<%# ヘッダー呼び出し %>
<%= render "shared/second-header" %>

<%# ログインしたアカウントを対象に編集 current_userは、devise内にあるモデル？ %>
<%= form_with model: current_user, class: 'registration-main', local: true do |f|%>
  <div class='form-wrap'>
    <%# タイトル %>
    <div class='form-header'>
      <h1 class='form-header-text'>
        ユーザー情報変更
      </h1>
    </div>
    <%# エラーメッセージ表示 %>
    <%= render 'shared/error_messages', model: f.object %>
    <%# ユーザー画像 任意 %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">画像</label>
        <span class="indispensable">任意</span>
      </div>
    </div>
    <div class="img-upload">
      <div class="form-text">
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# ユーザーネーム フォーム %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ユーザーネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_area :name, class:"input-default", id:"last-name", placeholder:"例) テスター" %>
      </div>
    </div>
    <%# メールアドレス フォーム %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <%# 性別 %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">性別</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
          <label class="input-name"> <%= f.radio_button :gender_id, 1, checked: true %>男性</label>
          <label class="input-name"> <%= f.radio_button :gender_id, 2 %>女性</label>
          <label class="input-name"> <%= f.radio_button :gender_id, 3 %>その他</label>
      </div>
    </div>
    <%# 身長 フォーム %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">身長(cm)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_field :height, class:"input-default", id:"height", placeholder:"170" %>
      </div>
    </div>
    <%# 生年月日 フォーム %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">生年月日</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-birth-wrap'>
          <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
    <%# 更新ボタン %>
    <div class="login-btn">
      <%= f.submit "更新", class:"login-red-btn" %>
    </div>
    
  </div>
<% end %>
<%# フッター呼び出し %>
<%= render "shared/second-footer"%>

