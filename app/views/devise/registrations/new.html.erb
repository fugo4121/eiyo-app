<%# ヘッダー呼び出し %>
<%= render "shared/second-header"%>

<%# ユーザー登録(new_user_registration_path)より情報を渡して、ユーザー作成(user_registration_path)する %>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <%# タイトル %>
    <div class='form-header'>
      <h1 class='form-header-text'>
        ユーザー情報入力
      </h1>
    </div>
    <%# エラーメッセージ表示 %>
    <%= render 'shared/error_messages', model: f.object %>
    <%# ユーザー画像 任意 %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">画像</label>
        <span class="indispensable">任意</span>
      </div>
    </div>
    <div class="img-upload">
      <div class="form-text">
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# ユーザーネーム フォーム %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ユーザーネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_area :name, class:"input-default", id:"last-name", placeholder:"例) テスター" %>
      </div>
    </div>
    <%# メールアドレス フォーム %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <%# パスワード フォーム %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <%# パスワード確認 フォーム %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <%# 性別・身長 フォーム %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">性別・身長(cm)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"input-name", id:"gender"}) %>
        <%= f.text_field :height, class:"input-name", id:"height", placeholder:"170" %>
      </div>
    </div>
    <%# 生年月日 フォーム %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">生年月日</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-birth-wrap'>
          <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
      <p class='info-text'>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
    </div>
    <%# 利用規約 %>
    <div class="form-group">
      <h2 class='form-bottom-text'>
        「会員登録」のボタンを押すことにより、
        <span>利用規約</span>
        <br>に同意したものとみなします
      </h2>
    </div>
    <%# ユーザー登録ボタン %>
    <div class='register-btn'>
      <%= f.submit "会員登録" ,class:"register-red-btn" %>
    </div>

    <p class='register-info'>本人情報の登録について</p>
  </div>
<% end %>
<%# フッター呼び出し %>
<%= render "shared/second-footer"%>
