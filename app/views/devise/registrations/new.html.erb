<%# ヘッダー呼び出し %>
<%= render "shared/logon_header"%>

<%# ユーザー登録(new_user_registration_path)より情報を渡して、ユーザー作成(user_registration_path)する %>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "shared/logon_form", f: f %>
<% end %>
<%# フッター呼び出し %>
<%= render "shared/logon_footer"%>
